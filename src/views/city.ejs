<%- include partials/header.ejs %>

<div class="column">
  <h1 class="center"> <%= posts[0].city %> </h1>
  <img src="<%= posts[0].picture %>" alt="">
  <% if (posts[0]) {
    posts.forEach( post => { %>
      <a href="/post/<%= post.post_id%>">
        <div class='box blue-box'>
          <p>  <%= post.title %> </p>
        </div>
      </a>
    <% })
  } else { %>
    <p class='box blue-box'> This city has no posts </p>
  <% } %>
</div>

